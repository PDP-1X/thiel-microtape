define	setxy x,y
	jdp .save
	lac x	sal 8s	dac .cdx
	lio y	sil 8s	dio .cdy
	jdp .rstor
	termin

define	penpos x,y
	jdp .save
	jdp .tpn
	dac x	dio y
	jdp .rstor
	termin

define	writec c
	jdp .save
	lac c	jdp .cd
	jdp .rstor
	termin

define	point x,y
	jdp .save
	lac x
	lio y
	jdp .pnt
	jdp .rstor
	termin

define	line x1,y1,x2,y2
	jdp .save
	lac x2	lio y2	dac . 5	dio . 5
	lac x1	lio y1
	jdp .lin
	0	0
	jdp .rstor
	termin

define	hline y,x1,x2
	jdp i .hline
	y
	x1
	x2
	terminate

define	vline x,y1,y2	/y2>y1
	jdp i .vline
	x
	y1
	y2
	terminate


define	octdis n
	jdp .save
	lac n
	jdp .sop
	jdp .rstor
	termin

define	decdis n
	jdp .save
	lac n
	jdp .sdp
	jdp .rstor
	termin

define	knob n,val
	jdp .save
	jdp .knb
	ckn n'00
	val
	jdp .rstor
	termin

define	button n,ldown
	jdp .save
	jdp .but
	n
	jmp ldown
	termin

define	switch m,ldown
	jdp .save
	jdp .swt
	m
	jmp ldown
	termin

define	message w
	jdp .save
	jsp .txx
	text *w*37**
	jdp .rstor
	termin

define	setsize x
	jdp .save
	lio x
	jdp .size
	jdp .rstor
	termin


